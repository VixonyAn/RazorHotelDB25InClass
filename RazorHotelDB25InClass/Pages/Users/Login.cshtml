@page
@using RazorHotelDB25InClass.Models
@model RazorHotelDB25InClass.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}

<a asp-page="Create" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Create Profile</a>

<form method="post">
    <span class="text-danger">@Model.MessageError</span>
    <div class="form-group">
        <label asp-for="@Model.User.Username" class="control-label"></label>
        <input asp-for="@Model.User.Username" style="display: br; width: 20%;" class="form-control" />
        <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Password" class="control-label"></label>
        <input asp-for="@Model.User.Password" style="display: br; width: 20%;" class="form-control" />
        <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
    </div>
    <div class="formgroup">
        <input type="submit" value="Login" class="btn btn-primary" style="background-color: green; border-color: green;" />
    </div>
</form>