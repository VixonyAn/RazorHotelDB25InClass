@page
@using RazorHotelDB25InClass.Models
@model RazorHotelDB25InClass.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<h3>Create User</h3>

<a asp-page="Login" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Back to Login</a>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.User.Username" class="control-label"></label>
        <input asp-for="@Model.User.Username" style="display: br; width: 30%;" class="form-control" />
        <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Password" class="control-label"></label>
        <input asp-for="@Model.User.Password" style="display: br; width: 30%;" class="form-control" />
        <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Photo" class="control-label">Upload image</label>
        <div class="custom-file">
            <input asp-for="@Model.Photo" style="display: br; width: 30%;" class="custom-file-input form-control" />
            <label class="custom-file-label"></label>
        </div>
    </div>
    <div class="formgroup">
        <input type="submit" value="Create User" class="btn btn-primary" style="background-color: green; border-color: green;" />
    </div>
</form>