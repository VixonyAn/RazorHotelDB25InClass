@page
@using RazorHotelDB25InClass.Models
@model RazorHotelDB25InClass.Pages.Hotels.UpdateModel
@{
    ViewData["Title"] = "Update Hotel";

}

<h3>Update Hotel Information</h3>

<form method="post" style="display: inline;" asp-page-handler="GetAllHotels">
    <input type="submit" value="Back to Hotels" class="btn btn-primary" style="background-color: gray; border-color: gray;" />
</form>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Hotel.HotelNr" class="control-label"></label>
        <input asp-for="@Model.Hotel.HotelNr" style="display: br; width: 30%;" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Navn" class="control-label"></label>
        <input asp-for="@Model.Hotel.Navn" style="display: br; width: 30%;" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Adresse" class="control-label"></label>
        <input asp-for="@Model.Hotel.Adresse" style="display: br; width: 50%;" class="form-control" />
    </div>
    <div class="formgroup">
        <input type="submit" value="Update Hotel" class="btn btn-primary" style="background-color: green; border-color: green;" />
    </div>
</form>