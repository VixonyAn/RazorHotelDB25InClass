@page
@using RazorHotelDB25InClass.Models
@model RazorHotelDB25InClass.Pages.Hotels.CreateModel
@{
    ViewData["Title"] = "Create Hotel";
}

<h3>Create Hotel</h3>

<a asp-page="GetAllHotels" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Back to Hotels</a>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Hotel.HotelNr" class="control-label"></label>
        <input asp-for="@Model.Hotel.HotelNr" style="display: br; width: 30%;" class="form-control" />
        <span asp-validation-for="@Model.Hotel.HotelNr" class="text-danger"></span>
    </div>
    <span class="text-danger">@Model.MessageError</span>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Navn" class="control-label"></label>
        <input asp-for="@Model.Hotel.Navn" style="display: br; width: 30%;" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Navn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Adresse" class="control-label"></label>
        <input asp-for="@Model.Hotel.Adresse" style="display: br; width: 50%;" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Adresse" class="text-danger"></span>
    </div>
    <div class="formgroup">
        <input type="submit" value="Confirm" class="btn btn-primary" style="background-color: green; border-color: green;" />
    </div>
</form>