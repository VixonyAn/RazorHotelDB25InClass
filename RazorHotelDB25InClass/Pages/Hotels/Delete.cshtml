@page
@using RazorHotelDB25InClass.Models
@model RazorHotelDB25InClass.Pages.Hotels.DeleteModel
@{
    ViewData["Title"] = "Delete Hotel";
}

<h3>Delete Hotel</h3>

<a asp-page="GetAllHotels" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Back to Hotels</a>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Hotel.HotelNr" class="control-label"></label>
        <input asp-for="@Model.Hotel.HotelNr" style="display: br; width: 30%;" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Navn" class="control-label"></label>
        <input asp-for="@Model.Hotel.Navn" style="display: br; width: 30%;" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Adresse" class="control-label"></label>
        <input asp-for="@Model.Hotel.Adresse" style="display: br; width: 50%;" readonly class="form-control" />
    </div>
    <span class="text-danger">@Model.MessageError</span>
    <div class="form-group">
        <input asp-for="@Model.Confirm" type="checkbox" id="Confirm" /> Confirm you wish to delete this hotel
    </div>
    <div class="formgroup">
        <input type="submit" value="Delete Hotel" class="btn btn-primary" style="background-color: #C94646; border-color: #C94646;" />
    </div>
</form>